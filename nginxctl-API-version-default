#!/bin/bash

# nginxctl v2.1 - API Development Helper with Emoji Boost âœ¨

NGINX_USER="nginxadmin"
NGINX_GROUP="nginxadmin"

# Gunakan nginx dari paket default apt
NGINX_BIN="/usr/sbin/nginx"
NGINX_PID="/run/nginx.pid"
NGINX_LOG="/var/log/nginx/error.log"
PID_FILE="$NGINX_PID"

PROJECT_FOLDER="devnogosec"
LARAVEL_PATH="/var/www/$PROJECT_FOLDER"
LARAVEL_LOG="$LARAVEL_PATH/storage/logs/laravel.log"
PHP_VERSION="8.2"
PHPFPM_SERVICE="php${PHP_VERSION}-fpm"
PHPFPM_ERROR_LOG="/var/log/php${PHP_VERSION}-fpm.log"

PORT_HTTP=8000
PORT_HTTPS=8443

function is_nginx_running() {
    pgrep -x nginx > /dev/null
    return $?
}

function check_ports() {
    echo "ğŸ” Mengecek port $PORT_HTTP dan $PORT_HTTPS..."
    sudo ss -tuln | grep -E ":$PORT_HTTP|:$PORT_HTTPS" || echo "â„¹ï¸  Tidak ada proses yang menggunakan port $PORT_HTTP atau $PORT_HTTPS."
}

function fix_permissions() {
  echo "ğŸ› ï¸  Memperbaiki permission storage & cache ke $NGINX_USER:$NGINX_GROUP ..."
  sudo chown -R "$NGINX_USER:$NGINX_GROUP" storage bootstrap/cache
}

function laravel_cache() {
    echo "ğŸ“¦ Menjalankan Laravel cache commands..."
    cd "$LARAVEL_PATH" || { echo "âŒ Gagal masuk ke folder Laravel"; exit 1; }
    php artisan config:cache
    php artisan route:cache
    php artisan view:cache
    echo "ğŸ› ï¸  Rename modifier file karena sebelumnya dibuat oleh root..."
    fix_permissions
}

function check_laravel_log() {
    echo "ğŸ“„ Log error Laravel (150 baris terakhir)"
    tail -n 150 "$LARAVEL_LOG"
}

function check_phpfpm_log() {
    echo "ğŸ“„ Log error PHP-FPM (150 baris terakhir)"
    tail -n 150 "$PHPFPM_ERROR_LOG"
}

function php_fpm_start() {
    echo "ğŸš€ Memulai PHP-FPM..."
    sudo systemctl start $PHPFPM_SERVICE && echo "âœ… PHP-FPM berjalan."
}

function php_fpm_stop() {
    echo "ğŸ›‘ Menghentikan PHP-FPM..."
    sudo systemctl stop $PHPFPM_SERVICE && echo "âœ… PHP-FPM berhenti."
}

function php_fpm_restart() {
    echo "â™»ï¸  Me-restart PHP-FPM..."
    sudo systemctl restart $PHPFPM_SERVICE && echo "âœ… PHP-FPM berhasil di-restart."
}

function php_fpm_status() {
    echo "ğŸ‘€ Status PHP-FPM:"
    sudo systemctl status $PHPFPM_SERVICE --no-pager
}

case "$1" in
  start)
    if is_nginx_running; then
      echo "âš ï¸  Nginx sudah berjalan."
    else
      echo "ğŸš€ Memulai Nginx..."
      check_ports
      sudo $NGINX_BIN
      sleep 1
      if is_nginx_running; then
        echo "âœ… Nginx berhasil dimulai."
      else
        echo "âŒ Gagal memulai Nginx. Lihat log: $NGINX_LOG"
      fi
    fi
    ;;
  stop)
    echo "ğŸ›‘ Menghentikan Nginx..."
    if [ -f "$PID_FILE" ]; then
      PID=$(cat "$PID_FILE")
      if kill "$PID" 2>/dev/null; then
        echo "âœ… Nginx berhasil dihentikan."
      else
        echo "âš ï¸  Gagal menghentikan proses PID $PID. Gunakan sudo atau periksa izin."
      fi
    else
       echo "âŒ File PID tidak ditemukan di $PID_FILE"
       echo "ğŸ‘€ Cek manual: ps aux | grep nginx"
    fi
    ;;
  restart)
    $0 stop
    sleep 1
    $0 start
    ;;
  log)
    echo "ğŸ“„ Menampilkan log error Nginx:"
    tail -f $NGINX_LOG
    ;;
  ports)
    check_ports
    ;;
  laravel-log)
    check_laravel_log
    ;;
  phpfpm-log)
    check_phpfpm_log
    ;;
  phpfpmstart)
    php_fpm_start
    laravel_cache
    ;;
  phpfpmstop)
    php_fpm_stop
    laravel_cache
    ;;
  phpfpmrestart)
    php_fpm_restart
    laravel_cache
    ;;
  phpfpmstatus)
    php_fpm_status
    ;;
  restarteperithing)
    $0 stop
    sleep 1
    $0 start
    php_fpm_restart
    laravel_cache
    ;;
  *)
    echo "ğŸ› ï¸  Gunakan: $0 {restarteperithing|start|stop|restart|log|ports|laravel-log|phpfpm-log|phpfpmstart|phpfpmstop|phpfpmrestart|phpfpmstatus}"
    ;;
esac
