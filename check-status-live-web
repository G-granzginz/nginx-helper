#!/bin/bash

echo "üîç Cek status PHP-FPM..."

PHP_FPM_SERVICE=$(systemctl list-units --type=service | grep php | grep fpm | awk '{print $1}' | head -n 1)

if [ -z "$PHP_FPM_SERVICE" ]; then
    echo "‚ùå PHP-FPM service tidak ditemukan."
    exit 1
fi

systemctl is-active --quiet "$PHP_FPM_SERVICE"
if [ $? -eq 0 ]; then
    echo "‚úÖ PHP-FPM ($PHP_FPM_SERVICE) sedang BERJALAN (UP)."
else
    echo "‚ùå PHP-FPM ($PHP_FPM_SERVICE) sedang TIDAK BERJALAN (DOWN)."
fi
